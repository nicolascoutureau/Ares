{% extends 'AresCoreBundle::layout.html.twig' %}

{% block content %}
    {% embed 'AresCoreBundle:Elements:panel.html.twig' with {title: task.name } %}
        {% block tools %}
            <a class="btn btn-default btn-round tooltips" href="{{ path('admin_task_index') }}" title="Retour Ã  la liste des taches">
                <i class="fa fa-chevron-left"></i>
                Retour
            </a>
        {% endblock %}
        {% block body -%}
            <table class="table table-striped">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ task.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ task.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ task.description }}</td>
                </tr>
                <tr>
                    <th>Deadline</th>
                    <td>{{ task.deadline|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Datecreated</th>
                    <td>{{ task.datecreated|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Estimated_time</th>
                    <td>{{ task.estimatedtime }}</td>
                </tr>
                <tr>
                    <th>State</th>
                    <td>{{ task.state }}</td>
                </tr>
                <tr>
                    <th>Users</th>
                    <td>
                    {% for user in task.users %}
                        {{ user.username }},
                    {% endfor %}
                    </td>
                </tr>
                </tbody>
            </table>
        {% endblock %}
    {% endembed %}
{% endblock %}
